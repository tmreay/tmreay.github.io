{
  "fpsLimit": 60,
  "detectRetina": true,
  "particles": {
    "number": {
      "value": 100,
      "limit": 160,
      "density": { "enable": true, "area": 800 }
    },
    "color": { "value": "#ff79c6" },
    "shape": { "type": "circle" },
    "opacity": {
      "value": 0.6,
      "animation": { "enable": false }
    },
    "size": {
      "value": 3,
      "random": true,
      "animation": { "enable": false }
    },
    "links": {
      "enable": true,
      "distance": 150,
      "color": "#bd93f9",
      "opacity": 0.4,
      "width": 1
    },
    "move": {
      "enable": true,
      "speed": 1,
      "direction": "none",
      "outModes": "bounce"
    },
    "collisions": {
      "enable": true,
      "mode": "bounce"
    }
  },
  "interactivity": {
    "detectsOn": "window",
    "events": {
      "onhover": { "enable": true, "mode": "grab" },
      "onclick": { "enable": true, "mode": "push" },
      "resize": true
    },
    "modes": {
      "grab": { "distance": 150, "line_linked": { "opacity": 0.4 } },
      "push": { "quantity": 3 }
    }
  }
}
